<p id="notice"><%= notice %></p>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
body{
    padding-top:70px;
    color: #1a202c;
    text-align: left;
    background-color: #ebe8df;   
    font-family: 'Montserrat';

}
nav{
  background-color: #450012;
}
.navbar .navbar-nav .nav-link:hover {
  background-color: #450012;
  color: #fff;
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 1px solid #450012;
    border-radius: .25rem;
}

.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}

.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}

.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}

.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}
</style>
</head>
<nav class="navbar fixed-top navbar-expand-sm navbar-dark">
  <div class="container-fluid">
    <a style="background-color:transparent;" class="navbar-brand" href="#">CSCE Recommendation Tracker</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Return to students page', students_path, class: 'nav-link' %>
        </li> 
      </ul>
    </div>
  </div>
</nav>
<body>

<% @Images.each do |image| %>
  <% if @student.uin == image.uin  %>
    <%= image_tag(image.photo) %>
  <% end %>
<% end %>

<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%= @student.firstname %> <%= @student.lastname %></h4>
                      <p class="text-secondary mb-1"><%= @student.major %></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card" style="margin-top:1%;">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  <h4>Recommendation Letter Status</h4>
                    <div class="mt-1">
                      <h5 class="mb-4 text-uppercase"><%= @student.recletter %></h5>
                    </div>
                    
                  </div>
                </div>
              </div>

              <div class="card" style="margin-top:1%;">
                <div class="card-body">
                  <div class="d-flex flex-column">
                  <h6>Change Recommendation Letter Status</h6>
                    <div class="mt-1">
                      <%= form_with(model: @student) do |form| %>
                      <div class="field">
                        <%= form.select :recletter, ['YES', 'NO', 'UNDECIDED']%>
                      </div>
                      <div class="actions">
                        <%= form.submit %>
                      </div>
                    <%end%>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card" style="margin-top:1%;">
                <div class="card-body">
                  <div class="d-flex flex-column">
                  <h4>Notes</h4>
                    <div class="mt-3">
                      <p class="text-secondary mb-1"><%= @student.notes %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.firstname %> <%= @student.lastname %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">UIN</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.uin %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Class</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.classname %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Semester and Year</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.semester %>, <%= @student.year %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Final Grade</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @student.finalgrade %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <%= link_to 'Edit Student Information', edit_student_path(@student) %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
    
</body>
</html>
