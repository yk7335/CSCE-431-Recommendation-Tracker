<nav class="navbar fixed-top navbar-expand-sm navbar-dark">
  <div class="container-fluid">
    <a style="background-color:transparent;" class="navbar-brand" href="#">CSCE Recommendation Tracker</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Return to students page', students_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<body>
    <h1> Import Students from CSV File </h1>
    <h2> Select appropriate CSV file and images before uploading</h2>
    
            <div class="container">
                <div class="main-body">
                    <div class="row">
                        <div class="card mb-3">
                            <div class="card-body">

                                <%= form_tag import_students_path, multipart: true do %>
                                    <%= form_with do |form| %>
                                        <div class="row">
                                            <h6 class="mb-0">Semester</h6>
                                            <div class="col text-secondary"> 
                                                <%= form.select :semester, ['Fall', 'Spring', 'Summer']%>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <h6 class="mb-0">Year</h6>
                                            <div class="col text-secondary">
                                                <%= form.text_field :year %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <h6 class="mb-0">Class</h6>
                                            <div class="col text-secondary">
                                                <%= form.text_field :classname %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <h6 class="mb-0">Select CSV</h6>
                                            <div class="col text-secondary">
                                                <%= file_field_tag :file %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <h6 class="mb-0">Select Images</h6>
                                            <div class="col text-secondary">
                                                <%= file_field_tag :files, multiple: true, accept:"jpg/png", name: 'files[]'%>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <h6 class="mb-0">Upload CSV and Images</h6>
                                            <div class="col text-secondary">
                                                <%= submit_tag "Upload Student Data" %>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

